/**index.wxss**/
page{
  background: #F9F9F9;
  height: auto;
}

.top{
  text-align: center;
}

view.section{
  margin:20rpx 0;
  font-size: 28rpx;
  background: #FFF;
  overflow: hidden;
  border:1px solid #EEE;
  border-width: 1px 0;
}

view.section label{
  float:left;
  display: block;
  line-height: 84rpx;
  margin:0 0 0 50rpx;
}

view.section input{
  background: #FFF;
  padding:0 0 0 76rpx;
  height: 84rpx;
}

view.section picker{ 
  padding:0 0 0 120rpx;
}

view.section picker text.selected{
  color:#000;
} 

view.section switch{
  display: block;
  float:right;
  padding:20rpx 34rpx 20rpx 0;
}

view.switch label{
  line-height: 100rpx;
}

view.section .picker text{
  font-size:28rpx;
  color:#848484;
}

.date{
  background: #FFF;
}

.date text{
  margin:0 0 0 20px;
}

.date view{
  padding:24rpx;
}

label{
  margin:0 20px 0 10px;
}

button{
  background: #e4861e;
  color:#FFF;
  border-radius: 0;
}

view.imgs{
  width:100%;
  background: #FFF;
}

view.imgs .img-title{
  padding:30rpx 50rpx 30rpx 4%;
  font-size:28rpx;
  overflow: hidden;
}

view.imgs .img-title button{
  float:right;
  width:100rpx;
  font-size: 20rpx;
  margin:0;
  padding:0;
  border:0;
  background: #FEC;
  color:#E84;
  box-shadow: 0;
}

view.imgs .img-list{
  width:88%;
  margin:0 auto;
}

.img-list image{
  width:200rpx;
  height:200rpx;
  margin:0 4% 10rpx 0;
  border-radius: 8rpx;
}

.img-list image.tail{
  margin-right:0;
}

button{
  display: block;
  position: fixed;
  bottom: 0;
  left:0;
  height:12%;
  width:100%;
  background: #ff9940;
  color:#FFF;
  text-align: center;
  font-size:40rpx;
  line-height: 140rpx;
  box-shadow: 0 0 6px #ff9940;
}

button.submit{
  background: #ff9940;
  box-shadow: 0 0 6px #ff9940;
}

button.disable{
  background: #c4c4c4;
  box-shadow: 0 0 6px #c4c4c4;
}

button::after{ 
  border:none;
}

label.tip{
  color:#848484;
}

text.limit{
  display: block;
  padding:0 0 0 50rpx;
  font-size:26rpx;
  line-height: 60rpx;
  color:#AAA;
}