page{
  background: #F9F9F9;
  height:96%;
}

.container{
  width:84%;
  margin:0 auto;
}

form{
  color:#A8A8A8;
  font-size:26rpx;
}

view.section{
  margin:30rpx 0 0 0 ;
}

view.sec-name{

}

view.sec-time{

}

view.sec-limit{
  margin:40rpx 0 0 0;
  border-top:2rpx solid #E5E5E5;
  padding:40rpx 0 0 0;
}

view.section label{
  display: block;
  line-height: 70rpx;
  font-size:26rpx;
  color:#A8A8A8;
  text-indent: 30rpx;
}

view.section .input-box{
  position: relative;
  background: #FFF;
  height:100rpx;
  box-shadow:0 0 4px rgba(216,216,216,0.25);
  border-radius: 8rpx;
}

view.section .iconfont{
  color:#FF9940;
  font-size:50rpx;  
  position: absolute;
  top:0;
  line-height: 100rpx;
}

view.section text.label-icon{
  position: absolute;
  font-size:50rpx;
  left:30rpx;
  top:22rpx;
  color:#FF9940;
}

view.section input{
  height:100%;
  width:70%;
  margin:0 0 0 100rpx;
  color:#000;
}

.placeholder{
  color:#AAA;
}

view.sec-name text.star{
  position: absolute;
  top:30rpx;
  right:30rpx;
  font-size:40rpx;
  color:#BBB;
}

view.sec-name text.star-selected{
  color:#FF9940;
}

view.sec-time button{
  width:48%;
  height:100rpx;
  line-height: 100rpx;
  border-color:#ff9940;
  display: inline-block;
  background: #FFF;
  margin:0 0 20rpx 0;
  font-size:26rpx;
}

view.sec-time button.selected{
  color:#ff9940;
  box-shadow:0 0 6rpx rgba(255,153,64,0.35);
}

view.sec-time button.selected:after{
  border-color:#ff9940;
}
  

view.sec-time picker{
  width:80%;
  height:100%;
}

view.sec-time view.picker{
  height:100%;
  width:100%;
  margin:0 0 0 100rpx;
}

view.picker text{
  line-height: 100rpx;
}


view.picker text.selected{
  color:#000;
}



view.toolbar{
  position: fixed;
  bottom:20rpx;
  width:100%;
  /* height:80rpx; */
}


view.toolbar button{
  font-size:30rpx;
  display: inline-block;
  line-height: 100rpx;
  background: #FFF;
  height:100rpx;
  color:#FFF;
}

view.toolbar button.again{
  background: #ffe8d3;
  width:32%;
  color:#ff9940;
  box-shadow:0 2rpx 6rpx rgba(255,153,64,0.40);
}

view.toolbar button.save{
  background: #ff9940;
  width:50%;
  margin:0 0 0 2%;
  box-shadow:0 2rpx 6rpx rgba(255,153,64,0.40);
}

view.toolbar button.disable{
  color:#BDBDBD;
  background: #E3E3E3;
}


view.toolbar button::after{ 
  border:none;
}

