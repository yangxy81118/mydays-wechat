/**index.wxss**/
page{
  background: #F9F9F9;
  height: auto;
}

.top{
  text-align: center;
}

view.section{
  margin:20rpx 0;
  font-size: 28rpx;
  background: #FFF;
  overflow: hidden;
}

view.section label{
  float:left;
  display: block;
  line-height: 84rpx;
  margin:0 0 0 50rpx;
}

view.section input{
  background: #FFF;
  padding:0 0 0 40rpx;
  height: 84rpx;
}

view.section picker{
  padding:0 0 0 120rpx;
}

view.section switch{
  display: block;
  float:right;
  padding:20rpx 0;
}

view.switch label{
  line-height: 100rpx;
}

view.section .picker text{
  font-size:28rpx;
  color:#848484;
}

.date{
  background: #FFF;
}

.date text{
  margin:0 0 0 20px;
}

.date view{
  font-size:16px;
  padding:8px;
}

label{
  margin:0 20px 0 10px;
}

button{
  background: #e4861e;
  color:#FFF;
  border-radius: 0;
}

view.imgs{
  width:100%;
  background: #FFF;
}

view.imgs .img-title{
  padding:30rpx 50rpx 30rpx 4%;
  font-size:28rpx;
  overflow: hidden;
}

view.imgs .img-title button{
  float:right;
  width:100rpx;
  font-size: 20rpx;
  margin:0;
  padding:0;
  border:0;
  background: #FEC;
  color:#E84;
  box-shadow: 0;
}

view.imgs .img-list{
  width:88%;
  margin:0 auto;
}

.img-list image{
  width:200rpx;
  height:200rpx;
  margin:0 4% 10rpx 0;
  border-radius: 8rpx;
}

.img-list image.tail{
  margin-right:0;
}

button.submit{
  position: fixed;
  bottom: 0;
  width:100%;
  font-size: 30rpx;
  padding:8rpx 0;
}

