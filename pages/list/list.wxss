/**index.wxss**/

.row{
  padding:4% 8%;
  border-bottom: 1px solid #F7F7F7;
  position: relative;
  overflow: hidden;
}

.row text{
  display: inline-block;
}

.title{
  font-size:36rpx;
  color:#333;
  width:30%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.time{
  font-size:24rpx;
  color:#AAA;
  margin:0 0 0 10%;
  width:40%;
  position: relative;
  top:-6px;
}

.row text.close{
  float:right;
  font-size:24px;
  color:#e4861e;
  background: none;
  border:none;
  padding:0;
  margin:0;
}

.row .toAdd{
  display: block;
  width:100%;
  height:100%;
  background: #e4861e;
  color:#FFF;
  font-size: 14px;
  line-height: 52px;
  text-align: center;
}

view.clear{
  margin:0;
  padding:0;
  border:none;
}

text.icon-add{
  display: inline-block;
  color:#FFF;
  margin:0 6px 0 0;
}