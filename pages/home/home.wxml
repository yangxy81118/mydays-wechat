<!--index.wxml-->
<view class="main">
  <view class="tab-nav">
    <text class="selected">全部</text>
    <text>星标</text>
  </view>
  <!--style='height:{{listHeight}}px' -->
  <scroll-view scroll-y='true' class="list" >
    <scroll-view scroll-x="true" class="day-item" wx:for="{{days}}" wx:for-index="idx" wx:for-item="item">
      <view class="item-scroll-wrap">
        <view class="day-box">  
          <text class="day-title ">{{item.name}}</text>
          <block wx:if="{{item.remain < 50}}">
            <text class="day-remain close-remain">还有{{item.remain}}天</text>
            <text class="date close-date">{{item.month}}月{{item.date}}日</text>
            <view class="close-tip"></view>
          </block>
          <block wx:else>
            <text class="day-remain">还有{{item.remain}}天</text>
            <text class="date">{{item.month}}月{{item.date}}日</text>
          </block>

        </view> 
        <view class="opt-box">
          <text class="edit">编辑</text>
          <text class="del">删除</text>
        </view>
      </view>
    </scroll-view>
  </scroll-view>

  <navigator class="add" url='/pages/edit/edit'>+</navigator>

</view>