view.main{
  background: #F9F9F9;
  height:100%;
  width:100%;
}

view.tab-nav{
  background: #FFF;
  height:8%;
  position: relative;
  border:1rpx solid #f3f3f3;
  border-width:1px 0;
}

view.tab-nav view{
  height:100%;
  background: none;
  font-size: 30rpx;
  color:#C7C7C7;
  display: inline-flex;
  align-items: center;
  justify-content:center;
  position: relative;
}

view.tab-nav view.underline{
  position: absolute;
  bottom:0rpx;
  left:32%;
  height:6rpx;
  background:#FFF;
  width:36%;
}

view.tab-nav view.nav{
  height:100%;
  width:42%;
}

view.tab-nav view.switch{
  border-left:1rpx solid #f3f3f3;
  width:15.5%;
}

view.nav text.icon{
  margin:0 10rpx 0 0;
  /* font-size:28rpx; */
}

view.nav text.word{
  font-weight: 700;
}

view.tab-nav view.selected{
  color:#ff9940;
}

view.tab-nav view.selected view.underline{
  background:#ff9940;
}



view.tab-nav image{
  position:absolute;
  right:31%;
  top:10%;
  width:32rpx;
  height:32rpx;
}

view.empty-list{
  margin:2% 0 0;
  width:100%;
  height:40%;
}

view.empty-list image{
  width:300rpx;
  height:300rpx;
  display: block;
  margin:24% auto 0;
}

view.empty-list .sug{
  margin:2% auto 0;
  font-size:28rpx;
  color:#AAA;
  text-align: center;
}

view.empty-list text{
  display: block;
}

view.empty-list .line{
  position: absolute;
  height: 28%;
  width:10%;
  left:50%;
  bottom:14%;
  border-left: 1px dashed #DDD;
}

scroll-view.list{
  margin:2% 0 0;
  width:100%;
  height:76%;
}

.day-item-h{
  overflow-x: hidden; 
  width:95%;
  height:170rpx;
  text-align: center;
  margin:0 5% 0 0;
}


view.item-scroll-wrap{
  width:128%;
  position: relative;
  margin:10rpx 0;
  padding:0 5%;
}

view.item-scroll-wrap view{
  float:left;
  height: 146rpx;
}

view.item-scroll-wrap .day-box{
  width:74.2%;
  background: #FFF;
  position: relative;
  border-radius: 10rpx;
  box-shadow:0 4px 4px 2px rgba(216,216,216,0.2);
}

.day-box image.star{
  position: absolute;
  top:10%;
  right:2%;
  width:26rpx;
  height:26rpx;
}


.day-box .close-tip{
  position: absolute;
  z-index: 1;
  width: 20rpx;
  height:100%;
  left:0;
  top:0;
  background: #ff9940;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.day-box text{
  display: block;
  position: absolute;
}

.day-box .day-title{
  font-size: 30rpx;
  font-weight: 700;
  top:25%;
  left:8%;
  color:#444;
}

.day-box .day-remain{
  font-size: 22rpx;
  bottom:20%;
  left:8%;
  color:#BBB;
}

.day-box .close-remain{
  color:#444;
}

.day-box .date{
  top:40%;
  right:6%;
  color:#8b8b8b;
  font-size: 24rpx;
}

.day-box .close-date{
  background: #ff9940;
  color:#FFF!important;
  border-radius: 36rpx;
  padding:10rpx;
  line-height: 40rpx;
  top:30%;
}


.day-item-h view.item-scroll-wrap .opt-box{
  width:25.8%;
  position: relative;
  top:26rpx;
}

.day-item-h .opt-box text{
  display: inline-block;
  height:100rpx;
  line-height: 100rpx;
  color:#FFF;
  width:50%;
  font-size:34rpx;
}

.day-item-h .opt-box text.edit{
  background: #CCC;
}

.day-item-h .opt-box text.del{
  background: #FE7070;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

navigator.add{
  display: block;
  position: fixed;
  bottom: 0;
  left:0;
  height:12%;
  width:100%;
  background: #ff9940;
  color:#FFF;
  text-align: center;
  font-size:40rpx;
  line-height: 140rpx;
  box-shadow: 0 0 6px #ff9940;
}

navigator.add:active{
  box-shadow: 0 0 2px #ff9940;
}