page{
  width:100%;
  height:100%;
  background:#FAFAEA;
}


view.main{
  position:relative;
  top:-60rpx;
  width:100%;
}

.words,.suggestions{
  background:#FFF;
  box-shadow: 0 4rpx 10rpx #DDD;
  width: 82%;
  color:#333;
  border-radius: 12rpx;
  padding:4%;
  margin:0 auto 30rpx;
}

.words view.row{
  overflow: hidden;
  line-height: 50rpx;
}

.words text{
  display:inline-block;
  color:#333;
}

.words text.name{
  font-size:40rpx;
  font-weight: 700;
}

.words text.date{
  font-size:32rpx;
}

.words text.right{
    float:right;
}

.words view.brief{
  font-size:24rpx;
  margin:20rpx 0 0 0;
  color:#888;
}

.words text.small{
  font-size:26rpx;
  color:#AAA;
}

.header{
  width:100%;
}

.header image{
  height:400rpx;
  width:100%;
}

view.comments{
  line-height:86rpx;
  padding:0 0 0 70rpx;
  font-size:24rpx;
  color:#666;
}

view.sug-box{
  width:100%;
  margin:0 0 30px 0;
  background:#FFF;
  color:#666;
  overflow: hidden;
}

view.sug-box .word-box{
  font-size: 24rpx;
}

.suggestions .icon {
  font-size: 60rpx;
  float:left;
  margin:0 30rpx 0 0;
}
