page{
  width:100%;
  height:100%;
  background:#FAFAEA;
}

view.header{
  height:400rpx;
  width:100%;
  position:relative;
  background:#324234;
}

.header .words{
  position:absolute;
  bottom:0px;
  height:140rpx;
  text-align:center;
  background:rgba(0,0,0,0.6);
  width:100%;
}

.words text{
  display:block;
  color:#FFF;
}

.words text.title{
  float:left;
  font-size:56rpx;
  line-height:140rpx;
  width:60%;
}

.words text.small{
  font-size:22rpx;
  line-height:32rpx;
  width:40%;
  float:right;
  text-align:left;
  color:#DDD;
}

.words text.date{
  margin:20px 0 0 0;
}

.header .bk{
  width:100%;
}

.header image{
  height:400rpx;
  width:100%;
}

view.comments{
  line-height:86rpx;
  padding:0 0 0 70rpx;
  font-size:24rpx;
  color:#666;
}

.suggestions{
  
}

view.sug-box{
  height:250rpx;
  width:100%;
  margin:0 0 10px 0;
  background:#FFF;
  color:#666;
  position: relative;
}

view.sug-box view.img{
  width:100%;
  height:250rpx;
  position: absolute;
  z-index: 0;
}


view.sug-box image{
  width:100%;
  height:250rpx;
}

view.sug-box .word-box{
  display:block;
  position: absolute;
  z-index: 1;
  width:50%;
  height:100%;
  top:0;
  left:0;
  background: rgba(0,0,0,.6);
}

view.sug-box .word-box text{
    font-size:26rpx;
    color:#FFF;
    display: block;
    width:80%;
    margin:40rpx 10%;
    text-align: center;
}

view.sug-box{
  font-size:26rpx;
  display:block;
}
